<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "Search tasks...", value: params[:search] %>
  <%= form.submit "Search" %>
<% end %>

<div id="tasks">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= truncate(task.description, length: 50) %></td>
          <td><%= task.status %></td>
          <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "Show", task %> |
            <%= link_to "Edit", edit_task_path(task) %> |
            <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path %>


<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>Tasks</h1>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "Search tasks by title...", value: @search_query %>
  <%= form.submit "Search" %>
  <% if @search_query.present? %>
    <%= link_to "Clear", tasks_path, class: "button" %>
  <% end %>
<% end %>

<% if @search_query.present? %>
  <p><strong><%= @tasks_count %></strong> task<%= @tasks_count != 1 ? 's' : '' %> found<% if @tasks_count > 0 %> for "<%= @search_query %>"<% end %></p>
<% end %>

<div id="tasks">
  <% if @tasks.any? %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= truncate(task.description || '', length: 50) %></td>
            <td><%= task.status %></td>
            <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= link_to "Show", task %> |
              <%= link_to "Edit", edit_task_path(task) %> |
              <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><em>No tasks found<% if @search_query.present? %> matching your search<% end %>.</em></p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>


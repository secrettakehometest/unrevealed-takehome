<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>

<%= form_with url: tasks_path, method: :get, local: true, class: "mb-4" do |form| %>
  <div class="row g-2">
    <div class="col-md-8">
      <%= form.text_field :search, placeholder: "Search tasks by title...", value: @search_query, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <div class="d-flex gap-2">
        <%= form.submit "Search", class: "btn btn-outline-primary" %>
        <% if @search_query.present? %>
          <%= link_to "Clear", tasks_path, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if @search_query.present? %>
  <div class="alert alert-info">
    <strong><%= @tasks_count %></strong> task<%= @tasks_count != 1 ? 's' : '' %> found<% if @tasks_count > 0 %> for "<%= @search_query %>"<% end %>
  </div>
<% end %>

<div class="table-responsive">
  <% if @tasks.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><strong><%= task.title %></strong></td>
            <td><%= truncate(task.description || '', length: 50) %></td>
            <td>
              <span class="badge <%= task.status_badge_class %>"><%= task.status_label %></span>
            </td>
            <td><small class="text-muted"><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></small></td>
            <td><small class="text-muted"><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></small></td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <%= link_to "Show", task, class: "btn btn-outline-primary" %>
                <%= link_to "Edit", edit_task_path(task), class: "btn btn-outline-secondary" %>
                <%= link_to "Delete", task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-secondary text-center">
      <p class="mb-0"><em>No tasks found<% if @search_query.present? %> matching your search<% end %>.</em></p>
    </div>
  <% end %>
</div>


<%= form_with(model: task, class: "needs-validation", novalidate: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h5>
      <ul class="mb-0">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a title.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, 
        [["Pending", "pending"], ["In Progress", "in_progress"], ["Completed", "completed"]], 
        { selected: task.status || "pending" }, 
        { class: "form-select" } %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", tasks_path, class: "btn btn-secondary" %>
  </div>
<% end %>


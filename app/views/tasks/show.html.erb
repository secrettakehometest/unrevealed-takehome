<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Task Details</h5>
    <div class="btn-group btn-group-sm">
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-primary" %>
      <%= link_to "Back to Tasks", tasks_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <div class="card-body">
    <%= render @task %>
  </div>
  <div class="card-footer">
    <%= button_to "Delete Task", @task, 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, 
        class: "btn btn-danger" %>
  </div>
</div>


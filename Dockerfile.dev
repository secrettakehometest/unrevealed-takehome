# Development Dockerfile for testing
ARG RUBY_VERSION=3.2.9

# Build stage: Install gems with build dependencies
FROM ruby:$RUBY_VERSION AS build

# Install build dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set working directory
WORKDIR /app

# Install gems (optimized for build cache: Gemfile changes less frequently than app code)
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Runtime stage: Only runtime dependencies
FROM ruby:$RUBY_VERSION

# Install runtime dependencies only
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    curl \
    sqlite3 \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set working directory
WORKDIR /app

# Create non-root user for security
RUN groupadd --system --gid 1000 rails && \
    useradd rails --uid 1000 --gid 1000 --create-home --shell /bin/bash

# Copy gems from build stage
COPY --from=build /usr/local/bundle /usr/local/bundle

# Copy application code (changes frequently, so placed after gem installation)
COPY . .

# Set ownership of application directory (after all copies to avoid cache invalidation)
RUN chown -R rails:rails /app

# Switch to non-root user
USER 1000:1000

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/up || exit 1

# Prepare database and start server
CMD ["sh", "-c", "rm -f tmp/pids/server.pid && rails db:prepare && rails server -b 0.0.0.0"]

